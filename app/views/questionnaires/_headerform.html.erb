<%= form_for ([@questionnaire]), remote: true, :html => {multipart: true, class: 'changes qForm'} do |f| %>
	<p class="questionnaire-name">
		<%= f.text_field :name %>
	</p>

	<div class="fixed-width container-fluid header-controls">
		<div class="row">


			<div class="col-md-6 col-lg-6 col-sm-12 col-sx-12">
				<p>
					<%= f.label :description, 'Beskrivning ' %>
						<%= f.text_area :description %>
				</p>
			</div>


			<div class="col-md-3 col-lg-3 col-sm-6 col-sx-6 answer-all-questions-container">
				<label>Svarsalternativ för alla frågor</label>
				<select name="setResponseOptionForAll" id="setResponseOptionForAll" data-questionnaireid="<%= @questionnaire.id %>">
						<option value="nil">Välj ett alternativ för alla frågor</option>
						<% @response_options.each do |option| %>
							<option value="<%= option.id %>"><%= option.name %></option>
						<% end %>
					</select>
				<input type="button" value="Redigera svarsalternativ" class="editRespAllOption">
			</div>

			<div class="col-md-3 col-lg-3 col-sm-6 col-sx-6 result-cats-container">
				<!-- <%= check_box_tag(:toggle_use_result_cat) %> -->
 				<%= f.check_box :has_result_categories, :onclick => "$('.qForm').submit()" %>
				<%= label_tag(:toggle_use_result_cat, "Alternativa resultkategorier") %> 
				<input type="button" value="Lägg till resultat-kategori" data-questionnaireid="<%= @questionnaire.id %>" class="showAddResultCat"
					style="margin-top: -10px; ">
			</div>
		</div>
	</div>

	<% end %>